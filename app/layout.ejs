    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
    />
    <link rel="stylesheet" href="./assets/style/all.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-white bg-primary position-relative">
      <div class="double-line"></div>
      <div class="container">
        <h1><a class="navbar-brand" href="index.html"><img src="assets/images/logo.svg" alt="" class="logo-img"></a></h1>
        <button class="navbar-toggler link-success" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="material-symbols-outlined text-success">
            menu
          </span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fs-6 lh-base align-items-center">
            <li class="nav-item">
              <a class="nav-link active me-12" aria-current="page" href="index.html">首頁</a>
            </li>
            <li class="nav-item me-12">
              <a class="nav-link" href="all-course.html">課程介紹</a>
            </li>
            <li class="nav-item me-12">
              <a href="" class="nav-link material-symbols-outlined d-flex align-items-center fs-6 lh-base" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                <span class="fs-4 me-1">account_circle</span>
                <span class="fs-6 lh-base">登入</span> 
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body container-fluid position-relative pt-4 pb-6">
        <button type="button" class="btn-close h7 position-absolute" data-bs-dismiss="modal"
          aria-label="Close"></button>
        <div class="row justify-content-center">
          <div class="col-md-8">
            <p class="modal-title h3 text-center" id="exampleModalLabel">登入</p>
            <form>
              <div class="mb-4">
                <label for="email" class="form-label">信箱</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="請輸入信箱">
              </div>
              <div class="mb-4">
                <label for="password" class="form-label">密碼</label>
                <input type="password" class="form-control" id="password" placeholder="請輸入密碼">
              </div>
              <button href="sign-up.html" type="submit" class="btn btn-gradient w-100 mb-6 border-0">登入</button>
            </form>
            <p class="text-center line-deco mb-3">其他登入方式</p>
            <a href="#" class="btn btn-outline-white w-100 mb-4 position-relative"><img
                src="assets/images/icon_fb.svg" alt="icon" class="login-icon">Facebook 登入</a>
            <a href="#" class="btn btn-outline-white w-100 position-relative"><img src="assets/images/icon_google.svg"
                alt="icon" class="login-icon">Google 登入</a>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    <%- contents %>

    <footer class="footer">
      <div class="bg-black-2">
        <div class="container">
          <p class="text-gray-2 text-center py-6 mb-0">Coding Home © 2022 All Rights Reserved</p>
        </div>
      </div>
    </footer>
    <!--modal-->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content text-center">
          <div class="modal-header">
            <div></div>
            <h5 class="modal-title" id="staticBackdropLabel">登入</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Understood</button>
          </div>
        </div>
      </div>
    </div>
    <script src="./assets/js/vendors.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="./assets/js/all.js"></script>
  </body>

</html>